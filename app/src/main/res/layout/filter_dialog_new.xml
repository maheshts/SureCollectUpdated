<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="1dp">

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:src="@mipmap/cancel" />

            <LinearLayout
                android:id="@+id/loutButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btClear"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/orange_background_rounded"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/strClear"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btApply"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_background_rounded"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/strSearch"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/loutStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/tvStatus"
                    android:background="@drawable/underline">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgDropDownStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingTop="5dp"
                        android:src="@mipmap/down_arrow_black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelectStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@id/imgDropDownStatus"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="10sp"
                        android:text="Select Status"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStatus"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Status"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout1"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/loutPartner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/tvPartner"
                    android:background="@drawable/underline">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgDropDownPartner"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingTop="5dp"
                        android:src="@mipmap/down_arrow_black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelectPartner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@id/imgDropDownPartner"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="10sp"
                        android:text="Select Partner"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPartner"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Partner"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout2"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/loutScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/tvScore"
                    android:background="@drawable/underline">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgDropDownScore"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingTop="5dp"
                        android:src="@mipmap/down_arrow_black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelectScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@id/imgDropDownScore"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="10sp"
                        android:text="Select Score"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvScore"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Score"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout3"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/loutBucket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/tvBucket"
                    android:background="@drawable/underline">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgDropDownBucket"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingTop="5dp"
                        android:src="@mipmap/down_arrow_black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelectBucket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/imgDropDownBucket"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="10sp"
                        android:text="Select Bucket"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBucket"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bucket"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/loutMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout8"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/loutContactMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/tvContactMode"
                    android:background="@drawable/underline">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgDropDownMode"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingTop="5dp"
                        android:src="@mipmap/down_arrow_black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelectMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@id/imgDropDownMode"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="10sp"
                        android:text="Phone"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvContactMode"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Contact Mode"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loutMode"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tvAgreementId"
                    android:background="@drawable/underline">

                    <EditText
                        android:id="@+id/etAgId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/colorHeader"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAgreementId"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/strAgreementId"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout4"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tvPhone"
                    android:background="@drawable/underline">

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/colorHeader"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPhone"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/phoneNumber"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout5"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tvPOSAmount"
                    android:background="@drawable/underline">

                    <EditText
                        android:id="@+id/etPOSAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/colorHeader"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPOSAmount"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/posAmount"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout6"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tvDueAmount"
                    android:background="@drawable/underline">

                    <EditText
                        android:id="@+id/etDueAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/colorHeader"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDueAmount"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/dueAmount"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/tvTitle"
                android:background="@color/colorSolidBlue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="Filter Cases List"
                android:textColor="@color/colorFooterBlue"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>